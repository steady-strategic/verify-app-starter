// Prisma schema for User Verification System + Admin Panel
// Uses Supabase Postgres

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ========================================
// USER VERIFICATION SYSTEM (DEPRECATED - V1)
// ========================================
// NOTE: These models are preserved for data safety.
// New user accounts use the Member model below.

model User {
  id                  String               @id @default(cuid())
  email               String               @unique
  passwordHash        String
  firstName           String
  lastName            String
  businessName        String?
  licenseNumber       String
  licenseType         String
  state               String
  status              UserStatus           @default(PENDING)
  verificationRequest VerificationRequest?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
}

model VerificationRequest {
  id           String   @id @default(cuid())
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  payload      Json
  decision     Decision @default(PENDING)
  mondayItemId String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum UserStatus {
  PENDING
  VERIFIED
  REJECTED
}

enum Decision {
  PENDING
  APPROVED
  REJECTED
}

// ========================================
// ADMIN PANEL & CONTENT MANAGEMENT (NEW)
// ========================================

model AdminUser {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String
  firstName    String
  lastName     String
  role         AdminRole @default(EDITOR)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  stories Story[]
  lessons Lesson[]
}

enum AdminRole {
  EDITOR       // Can create/edit stories and lessons
  ADMIN        // EDITOR + can publish/unpublish
  SUPER_ADMIN  // ADMIN + user management
}

model Story {
  id          String    @id @default(cuid())
  title       String
  slug        String    @unique
  excerpt     String
  content     String    @db.Text
  imageUrl    String?
  mediaUrl    String?   // External media link (YouTube, etc.)
  published   Boolean   @default(false)
  authorId    String
  author      AdminUser @relation(fields: [authorId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  publishedAt DateTime?

  @@index([published, createdAt])
}

model Lesson {
  id            String    @id @default(cuid())
  title         String
  description   String
  audioFileName String
  audioUrl      String?
  durationSecs  Int
  fileSizeBytes Int
  allowOffline  Boolean   @default(true)
  published     Boolean   @default(false)
  authorId      String
  author        AdminUser @relation(fields: [authorId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([published, createdAt])
}

// ========================================
// USER ACCOUNT SYSTEM V2 (NEW)
// ========================================

model Member {
  id            String         @id @default(cuid())
  email         String         @unique
  passwordHash  String?        // Null until password is set
  firstName     String
  lastName      String
  mondayItemId  String?        @unique  // monday.com item ID
  status        MemberStatus   @default(INVITED)
  inviteTokens  InviteToken[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  lastLoginAt   DateTime?
}

model InviteToken {
  id            String    @id @default(cuid())
  tokenHash     String    @unique  // SHA-256 hash of the raw token
  memberId      String
  member        Member    @relation(fields: [memberId], references: [id], onDelete: Cascade)
  expiresAt     DateTime  // TTL: 24 hours from creation
  usedAt        DateTime? // Null if unused, timestamp if used
  createdAt     DateTime  @default(now())

  @@index([tokenHash])
  @@index([memberId])
}

enum MemberStatus {
  INVITED     // Initial state, awaiting password set
  ACTIVE      // Password set, can log in
  SUSPENDED   // Account suspended (optional future use)
}
